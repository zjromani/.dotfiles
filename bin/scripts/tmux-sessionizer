#! /usr/bin/env bash

shopt -s nullglob dotglob
dirs=(~/*/ ~/me/*/ ~/work/*/)
shopt -u nullglob dotglob

# Get existing tmux sessions
existing_sessions=$(tmux list-sessions -F "#{session_name}" 2>/dev/null)

# Combine directories and existing sessions
session=$(
    {
        printf '%s\n' "${dirs[@]%/}" | grep -v "$HOME/Public"
        [ -n "$existing_sessions" ] && printf '%s\n' "$existing_sessions"
    } | fzf
)

[ -z "$session" ] && exit 0

session_name=$(basename "$session" | tr . _)

if ! tmux has-session -t "$session_name" 2>/dev/null; then
    tmux new-session -s "$session_name" -c "$session" -d
fi

tmux switch-client -t "$session_name"



