#!/bin/bash

JIRA_URL="https://hotelengine.atlassian.net"
JIRA_USERNAME="${WORK_EMAIL}"
JIRA_API_TOKEN="${JIRA_API_TOKEN}"

PROJECT_KEY="SAPC"

ISSUE_TYPE="Story"
CUSTOM_FIELD_TYPE_ID="customfield_10045"
# Type field option ID - find the correct ID by:
# 1. Viewing an existing issue with the desired Type value in JIRA
# 2. Exporting it as XML (add ?os_authType=basic to the RSS feed URL)
# 3. Looking for <customfield id="customfield_10045"> and the key attribute in <customfieldvalue>
# Example: <customfieldvalue key="10182"> corresponds to "New Feature"
# Update this value with the ID for your desired Type (e.g., "Infrastructure/Tech Debt")
CUSTOM_FIELD_TYPE_VALUE_ID="10182"
CUSTOM_FIELD_TEAM_ID="customfield_10001"
CUSTOM_FIELD_TEAM_VALUE="fc09d2a7-de13-4b20-878d-1c3fb4346333"

# Issue summary and description (passed as arguments)
SUMMARY=$1
DESCRIPTION=$2

if [ -z "$SUMMARY" ]; then
  echo "Usage: $0 <summary> [description]"
  exit 1
fi

JSON_PAYLOAD=$(jq -n --arg project_key "$PROJECT_KEY" --arg issue_type "$ISSUE_TYPE" \
  --arg summary "$SUMMARY" --arg description "$DESCRIPTION" \
  --arg custom_field_type_id "$CUSTOM_FIELD_TYPE_ID" --arg custom_field_type_value_id "$CUSTOM_FIELD_TYPE_VALUE_ID" \
  --arg custom_field_team_id "$CUSTOM_FIELD_TEAM_ID" --arg custom_field_team_value "$CUSTOM_FIELD_TEAM_VALUE" '
{
  fields: {
    project: { key: $project_key },
    issuetype: { name: $issue_type },
    summary: $summary,
    description: $description,
    ($custom_field_team_id): $custom_field_team_value,
    ($custom_field_type_id): { id: $custom_field_type_value_id }
  }
}')

echo "JSON Payload:"
echo "$JSON_PAYLOAD" | jq .

RESPONSE=$(curl -s -u ${JIRA_USERNAME}:${JIRA_API_TOKEN} \
    -X POST \
    -H "Content-Type: application/json" \
    --data "${JSON_PAYLOAD}" \
    ${JIRA_URL}/rest/api/2/issue)

if echo "$RESPONSE" | grep -q '"key"'; then
    ISSUE_KEY=$(echo "$RESPONSE" | jq -r '.key')
    ISSUE_LINK="${JIRA_URL}/browse/$ISSUE_KEY"
    echo "Issue created successfully: $ISSUE_KEY"
    echo "Link: $ISSUE_LINK"
    open "$ISSUE_LINK"
else
    echo "Failed to create issue:"
    echo "$RESPONSE" | jq .
fi
